<Alloy>
	<Window id="findUs" layout="vertical" onOpen="winOpen">
		<View id = "topView" backgroundColor="white" top ="0" height ="60" width ="100%">
			<Label id = "titleLable" bottom = "0" height="80%">Find Us</Label>
			<View id = "lineView" backgroundColor="black" height="0.5" width="100%" bottom="0"></View>
			<Label id = "backLabel"  text="< Back" onClick="goBack" left = "3" top = "45%"></Label>
			<Label id = "logoutLable" bottom = "0"  onClick="logoutClicked">Logout</Label>
		</View>
		<ScrollView id = "scrollView" layout="vertical">
			<ImageView id = "logoImage"></ImageView>
			<Label id = "titleLabel"></Label>
			<Label id = "textArea"></Label>
			<View id = "phoneView" calss = "">
				<ImageView id = "phoneImage" class = "imageProperty" image="/findUs/phone-icon.png"></ImageView>
				<Label id = "phoneLabel" class = "labelProperty">800 Lookswoow (800 566579669)</Label>
			</View>
			<View id = "emailView" calss = "" >
				<ImageView id = "emailImage" class = "imageProperty" image="/findUs/email-icon.png"></ImageView>
				<Label id = "emailLabel" class = "labelProperty">info@lookswoow.com</Label>
			</View>
			<Module id="mapview" module="ti.map" onClick="showMap"/>
			<!-- <View id="mapview">
			</View> -->
		</ScrollView>
		<View id = "bottomView" bottom= "0">
			<Require id="tabView" src="tabView" />
		</View>
	</Window>
</Alloy>
